#!/usr/bin/env node

/**
 * Module dependencies.
 */

import app from '../src/app.js';
import debugLib from 'debug';
import http from 'http';

const debug = debugLib('recicleaqui-20-back:server');

/**
 * HttpServer - Gerencia o servidor HTTP da aplicação
 */
class HttpServer {
  constructor(application, options = {}) {
    this.app = application;
    this.port = this.normalizePort(options.port || process.env.APP_PORT || '3000');
    this.server = null;
    this.debug = debug;
  }

  /**
   * Normaliza a porta para número, string ou false
   */
  normalizePort(val) {
    const port = parseInt(val, 10);

    if (isNaN(port)) {
      // named pipe
      return val;
    }

    if (port >= 0) {
      // port number
      return port;
    }

    return false;
  }

  /**
   * Cria o servidor HTTP
   */
  createServer() {
    this.app.set('port', this.port);
    this.server = http.createServer(this.app);
    return this.server;
  }

  /**
   * Inicia o servidor
   */
  start() {
    if (!this.server) {
      this.createServer();
    }

    this.server.listen(this.port);
    this.server.on('error', (error) => this.onError(error));
    this.server.on('listening', () => this.onListening());

    return this.server;
  }

  /**
   * Para o servidor
   */
  async stop() {
    if (this.server) {
      return new Promise((resolve, reject) => {
        this.server.close((err) => {
          if (err) reject(err);
          else resolve();
        });
      });
    }
  }

  /**
   * Event listener para erros do servidor
   */
  onError(error) {
    if (error.syscall !== 'listen') {
      throw error;
    }

    const bind = typeof this.port === 'string'
      ? 'Pipe ' + this.port
      : 'Port ' + this.port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
      case 'EACCES':
        console.error(bind + ' requires elevated privileges');
        process.exit(1);
        break;
      case 'EADDRINUSE':
        console.error(bind + ' is already in use');
        process.exit(1);
        break;
      default:
        throw error;
    }
  }

  /**
   * Event listener para quando o servidor está escutando
   */
  onListening() {
    const addr = this.server.address();
    const bind = typeof addr === 'string'
      ? 'pipe ' + addr
      : 'port ' + addr.port;
    this.debug('Listening on ' + bind);
  }

  /**
   * Obtém informações do servidor
   */
  getInfo() {
    if (!this.server) {
      return { running: false };
    }

    const addr = this.server.address();
    return {
      running: true,
      port: this.port,
      address: addr
    };
  }
}

// Cria e inicia o servidor
const httpServer = new HttpServer(app);
httpServer.start();

// Export para uso em testes
export default httpServer;
